{
  "name": "vscode-bsp",
  "displayName": "BSP Client",
  "description": "A general Build Server Protocol client for VSCode",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/.bsp/*",
    "onCommand:bsp.activate"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bsp.activate",
        "title": "Activate BSP Extension",
        "category": "BSP"
      },
      {
        "command": "bsp.refresh",
        "title": "Refresh Build Targets",
        "category": "BSP",
        "icon": "$(refresh)"
      },
      {
        "command": "bsp.showTargets",
        "title": "Show Build Targets",
        "category": "BSP"
      },
      {
        "command": "bsp.compile",
        "title": "Compile Target",
        "category": "BSP",
        "icon": "$(rocket)"
      },
      {
        "command": "bsp.test",
        "title": "Test Target",
        "category": "BSP",
        "icon": "$(check-all)"
      },
      {
        "command": "bsp.run",
        "title": "Run Target",
        "category": "BSP",
        "icon": "$(triangle-right)"
      },
      {
        "command": "bsp.debug",
        "title": "Debug Target",
        "category": "BSP",
        "icon": "$(bug)"
      },
      {
        "command": "bsp.showOutput",
        "title": "Show BSP Output",
        "category": "BSP"
      },
      {
        "command": "bsp.discoverConnections",
        "title": "Discover BSP Connections",
        "category": "BSP",
        "icon": "$(search)"
      },
      {
        "command": "bsp.connectAll",
        "title": "Connect All BSP Servers",
        "category": "BSP",
        "icon": "$(plug)"
      },
      {
        "command": "bsp.disconnectAll",
        "title": "Disconnect All BSP Servers",
        "category": "BSP",
        "icon": "$(debug-disconnect)"
      },
      {
        "command": "bsp.connectServer",
        "title": "Connect to Server",
        "category": "BSP",
        "icon": "$(debug-start)"
      },
      {
        "command": "bsp.disconnectServer",
        "title": "Disconnect from Server",
        "category": "BSP",
        "icon": "$(debug-stop)"
      },
      {
        "command": "bsp.compileDisabled",
        "title": "Compile Not Supported",
        "category": "BSP",
        "icon": "$(rocket)",
        "enablement": "false"
      },
      {
        "command": "bsp.testDisabled",
        "title": "Test Not Supported",
        "category": "BSP",
        "icon": "$(check-all)",
        "enablement": "false"
      },
      {
        "command": "bsp.runDisabled",
        "title": "Run Not Supported",
        "category": "BSP",
        "icon": "$(triangle-right)",
        "enablement": "false"
      },
      {
        "command": "bsp.debugDisabled",
        "title": "Debug Not Supported",
        "category": "BSP",
        "icon": "$(bug)",
        "enablement": "false"
      },
      {
        "command": "bsp.selectXcodeConfiguration",
        "title": "Select Xcode Configuration",
        "category": "BSP",
        "icon": "$(list-selection)"
      },
      {
        "command": "bsp.selectXcodeDestination",
        "title": "Select Xcode Destination",
        "category": "BSP",
        "icon": "$(device-mobile)"
      },
      {
        "command": "bsp.addToFavorites",
        "title": "Add to Favorites",
        "category": "BSP",
        "icon": "$(star-empty)"
      },
      {
        "command": "bsp.removeFromFavorites",
        "title": "Remove from Favorites",
        "category": "BSP",
        "icon": "$(star-full)"
      },
      {
        "command": "bsp.reconnectFavorite",
        "title": "Reconnect to Server",
        "category": "BSP",
        "icon": "$(debug-restart)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "bspTargets",
          "name": "Build Targets",
          "when": "bsp.enabled"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "bsp.refresh",
          "when": "view == bspTargets",
          "group": "navigation"
        },
        {
          "command": "bsp.discoverConnections",
          "when": "view == bspTargets",
          "group": "navigation"
        },
        {
          "command": "bsp.connectAll",
          "when": "view == bspTargets",
          "group": "navigation"
        },
        {
          "command": "bsp.disconnectAll",
          "when": "view == bspTargets",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "bsp.compile",
          "when": "view == bspTargets && viewItem =~ /buildTarget.*canCompile/",
          "group": "inline@1"
        },
        {
          "command": "bsp.test",
          "when": "view == bspTargets && viewItem =~ /buildTarget.*canTest/",
          "group": "inline@2"
        },
        {
          "command": "bsp.run",
          "when": "view == bspTargets && viewItem =~ /buildTarget.*canRun/",
          "group": "inline@3"
        },
        {
          "command": "bsp.debug",
          "when": "view == bspTargets && viewItem =~ /buildTarget.*canDebug/",
          "group": "inline@4"
        },
        {
          "command": "bsp.compileDisabled",
          "when": "view == bspTargets && viewItem =~ /^buildTarget/ && !(viewItem =~ /canCompile/)",
          "group": "inline@1"
        },
        {
          "command": "bsp.testDisabled",
          "when": "view == bspTargets && viewItem =~ /^buildTarget/ && !(viewItem =~ /canTest/)",
          "group": "inline@2"
        },
        {
          "command": "bsp.runDisabled",
          "when": "view == bspTargets && viewItem =~ /^buildTarget/ && !(viewItem =~ /canRun/)",
          "group": "inline@3"
        },
        {
          "command": "bsp.debugDisabled",
          "when": "view == bspTargets && viewItem =~ /^buildTarget/ && !(viewItem =~ /canDebug/)",
          "group": "inline@4"
        },
        {
          "command": "bsp.connectServer",
          "when": "view == bspTargets && viewItem == disconnectedBspServer",
          "group": "inline"
        },
        {
          "command": "bsp.disconnectServer",
          "when": "view == bspTargets && viewItem == connectedBspServer",
          "group": "inline"
        },
        {
          "command": "bsp.selectXcodeConfiguration",
          "when": "view == bspTargets && viewItem == xcodeConfigurationSelector",
          "group": "inline"
        },
        {
          "command": "bsp.selectXcodeDestination",
          "when": "view == bspTargets && viewItem == xcodeDestinationSelector",
          "group": "inline"
        },
        {
          "command": "bsp.addToFavorites",
          "when": "view == bspTargets && viewItem =~ /buildTarget/ && !(viewItem =~ /favorite/)",
          "group": "favorites@1"
        },
        {
          "command": "bsp.removeFromFavorites",
          "when": "view == bspTargets && viewItem =~ /favorite/",
          "group": "favorites@1"
        },
        {
          "command": "bsp.reconnectFavorite",
          "when": "view == bspTargets && viewItem =~ /favorite.*disconnected/",
          "group": "connection@1"
        }
      ]
    }
  },
  "configuration": {
    "type": "object",
    "title": "BSP Configuration",
    "properties": {
      "bsp.favoriteTargets": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "default": [],
        "description": "List of favorite build target URIs"
      },
      "bsp.xcode.targets": {
        "type": "object",
        "default": {},
        "description": "Saved Xcode target configurations (scheme and destination selections)",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "selectedConfiguration": {
              "type": "string",
              "description": "Selected Xcode configuration"
            },
            "selectedDestination": {
              "type": "string",
              "description": "Selected Xcode destination"
            },
            "lastUpdated": {
              "type": "string",
              "description": "Last update timestamp"
            }
          }
        }
      }
    }
  },
  "breakpoints": [
    {
      "language": "scala"
    },
    {
      "language": "java"
    },
    {
      "language": "kotlin"
    }
  ],
  "debuggers": [
    {
      "type": "bsp-debug",
      "label": "BSP Debug",
      "program": "./out/debugAdapter.js",
      "runtime": "node",
      "configurationAttributes": {
        "launch": {
          "required": [
            "program"
          ],
          "properties": {
            "program": {
              "type": "string",
              "description": "Absolute path to the program.",
              "default": "${workspaceFolder}/${command:AskForProgramName}"
            },
            "stopOnEntry": {
              "type": "boolean",
              "description": "Automatically stop after launch.",
              "default": true
            },
            "args": {
              "type": "array",
              "description": "Command line arguments passed to the program.",
              "items": {
                "type": "string"
              },
              "default": []
            },
            "cwd": {
              "type": "string",
              "description": "Absolute path to the working directory of the program being debugged.",
              "default": "${workspaceFolder}"
            },
            "environment": {
              "type": "array",
              "description": "Environment variables passed to the program.",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Name of the environment variable."
                  },
                  "value": {
                    "type": "string",
                    "description": "Value of the environment variable."
                  }
                }
              },
              "default": []
            }
          }
        },
        "attach": {
          "required": [
            "connect"
          ],
          "properties": {
            "connect": {
              "type": "object",
              "description": "Connect to debug server",
              "properties": {
                "host": {
                  "type": "string",
                  "description": "Host name or IP address",
                  "default": "localhost"
                },
                "port": {
                  "type": "number",
                  "description": "Port number",
                  "default": 5005
                },
                "socket": {
                  "type": "string",
                  "description": "Unix socket path"
                }
              }
            }
          }
        }
      },
      "initialConfigurations": [
        {
          "type": "bsp-debug",
          "request": "launch",
          "name": "BSP Debug",
          "program": "${workspaceFolder}/${command:AskForProgramName}",
          "stopOnEntry": true
        }
      ],
      "configurationSnippets": [
        {
          "label": "BSP Debug: Launch",
          "description": "A new configuration for debugging a BSP target",
          "body": {
            "type": "bsp-debug",
            "request": "launch",
            "name": "BSP Debug",
            "program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
            "stopOnEntry": true
          }
        },
        {
          "label": "BSP Debug: Attach",
          "description": "A new configuration for attaching to a BSP debug server",
          "body": {
            "type": "bsp-debug",
            "request": "attach",
            "name": "BSP Attach",
            "connect": {
              "host": "localhost",
              "port": 5005
            }
          }
        }
      ]
    }
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "install-local": "code --install-extension vscode-bsp-*.vsix"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "vscode-jsonrpc": "^8.0.2"
  }
}